<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/launch_title_1"
        android:text="@string/launch_title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="44sp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/launch_subtitle_1"
        android:text="@string/launch_subtitle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/launch_img_1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/ar_analyst"
        android:layout_marginTop="10dp"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/launch_next_1"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="86dp"
        android:outlineProvider="none"
        android:background="@drawable/launch_button">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:src="@drawable/icon_goto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>