<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/launch_title_3"
        android:text="@string/launch_title_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="44sp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/launch_subtitle_3"
        android:text="@string/launch_subtitle_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/launch_img_3"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/navigation"
        android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/launch_permission"
        android:text="app需要申请文件读写权限"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="#49000000"
        android:layout_marginTop="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/launch_applyBtn"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:outlineProvider="none"
        android:background="@drawable/launch_button">

        <TextView
            android:id="@+id/applyTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="申请权限"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="-15dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/icon_goto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/applyTxt"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/launch_exit_btn"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:textColor="#323232"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:outlineProvider="none"
        android:text="退出APP" />

</LinearLayout>